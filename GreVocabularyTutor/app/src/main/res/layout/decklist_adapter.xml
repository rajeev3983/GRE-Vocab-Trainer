<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <TextView
        android:id="@+id/deck_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="random"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/expert_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="0%\nExpert"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:layout_weight="1"
            android:textSize="10dp"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/intermidiate_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_light"
            android:text="0%\nIntermediate"
            android:layout_weight="1"
            android:textSize="10dp"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/novice_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0%\nNovice"
            android:textColor="@android:color/holo_red_dark"
            android:layout_weight="1"
            android:textSize="10dp"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/unanswered_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0%\nUnanswered"
            android:textColor="@android:color/widget_edittext_dark"
            android:layout_weight="1"
            android:textSize="10dp"
            android:padding="2dp"
            />
    </LinearLayout>
</LinearLayout>